{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"declaration": true,
		"outDir": "./lib",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": ["jest", "node"],
		"lib": [
			"DOM",
			"ES6"
		]
	},
	"include": [
		"**/*.ts"
	]
}

